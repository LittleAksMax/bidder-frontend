{
  "compilerOptions": {
    "target": "ESNext",
    "useUnknownInCatchVariables": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,                     // master strict flag

    // Recommended extra strictness:
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    // More aggressive:
    "noUncheckedIndexedAccess": true,   // treats arr[idx] as T | undefined
    "exactOptionalPropertyTypes": true, // optional props truly optional

    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": false,             // stricter, but can be noisy
    "forceConsistentCasingInFileNames": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  }
}